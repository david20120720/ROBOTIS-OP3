<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:property name="pi" value="3.141592654" />

  <!-- robotis_op3 head -->
  <xacro:macro name="robotis_op3_head" params="parent">
  
  <!-- head yaw joint -->
  <joint name="head_pan" type="revolute">
    <axis xyz="0 0 1" />    
    <origin xyz="0.0 0.0 0.102" rpy="0 0 0"/>
    <parent link="${parent}"/>
    <child  link="head_pan_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="head_pan" />    

  <!-- head yaw link -->
  <link name="head_pan_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/head_pan_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <!-- head pitch joint -->
  <joint name="head_tilt" type="revolute">
    <axis xyz="0 -1 0" />    
    <origin xyz="0.0255 -0.019 0.03725" rpy="0 0 0"/>
    <parent link="head_pan_link"/>
    <child  link="head_tilt_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="head_tilt" />    

  <!-- head pitch link -->
  <link name="head_tilt_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/head_tilt_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  
  <!-- camera joint -->
  <joint name="cam" type="fixed">
    <origin xyz="0.025 0.019 0.038" rpy="${-pi*0.5} 0 ${-pi*0.5}"/>
    <parent link="head_tilt_link"/>
    <child link="cam_link"/>
  </joint> 

  <!-- camera link -->
  <link name="cam_link">
  </link>

  
  </xacro:macro>
  
</robot>