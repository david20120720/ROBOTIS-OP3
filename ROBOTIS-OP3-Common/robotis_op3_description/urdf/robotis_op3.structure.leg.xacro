<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:property name="pi" value="3.141592654" />

  <!--//////////////////////////////////////////////////////////////////////////////////////-->
  <!--//////////////////////////////// robotis_op3 right leg ////////////////////////////////-->
  <!--//////////////////////////////////////////////////////////////////////////////////////-->   
  <!-- robotis_op3 right leg -->
  <xacro:macro name="robotis_op3_r_leg" params="parent">
  
  <!-- right hip yaw joint -->
  <joint name="r_hip_yaw" type="revolute">
    <axis xyz="0 0 -1" />    
    <origin xyz="0.0 -0.035 -0.036" rpy="0 0 0"/>
    <parent link="${parent}"/>
    <child  link="r_hip_yaw_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_hip_yaw" />    

  <!-- right hip yaw link -->
  <link name="r_hip_yaw_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_hip_yaw_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <!-- right hip roll joint -->
  <joint name="r_hip_roll" type="revolute">
    <axis xyz="-1 0 0" />    
    <origin xyz="-0.021 0.0 -0.0285" rpy="0 0 0"/>
    <parent link="r_hip_yaw_link"/>
    <child  link="r_hip_roll_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_hip_roll" />    

  <!-- right hip roll link -->
  <link name="r_hip_roll_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_hip_roll_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  
  <!-- right hip pitch joint -->
  <joint name="r_hip_pitch" type="revolute">
    <axis xyz="0 1 0" />    
    <origin xyz="0.0211 0.019 0.0" rpy="0 0 0"/>
    <parent link="r_hip_roll_link"/>
    <child  link="r_hip_pitch_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_hip_pitch" />    

  <!-- right hip pitch link -->
  <link name="r_hip_pitch_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_hip_pitch_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <!-- right knee pitch joint -->
  <joint name="r_knee" type="revolute">
    <axis xyz="0 1 0" />    
    <origin xyz="0.0 0.0 -0.11" rpy="0 0 0"/>
    <parent link="r_hip_pitch_link"/>
    <child  link="r_knee_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_knee" />    

  <!-- right knee pitch link -->
  <link name="r_knee_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_knee_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  
  <!-- right ankle pitch joint -->
  <joint name="r_ank_pitch" type="revolute">
    <axis xyz="0 -1 0" />    
    <origin xyz="0.0 0.0 -0.11" rpy="0 0 0"/>
    <parent link="r_knee_link"/>
    <child  link="r_ank_pitch_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_ank_pitch" />    

  <!-- right ankle pitch link -->
  <link name="r_ank_pitch_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_ank_pitch_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  
  <!-- right ankle roll joint -->
  <joint name="r_ank_roll" type="revolute">
    <axis xyz="1 0 0" />    
    <origin xyz="-0.021 -0.019 0.0" rpy="0 0 0"/>
    <parent link="r_ank_pitch_link"/>
    <child  link="r_ank_roll_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="r_ank_roll" />    

  <!-- right ankle roll link -->
  <link name="r_ank_roll_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/r_ank_roll_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
    
  </xacro:macro>
    
    

