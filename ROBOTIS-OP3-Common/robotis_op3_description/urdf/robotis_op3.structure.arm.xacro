<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:property name="pi" value="3.141592654" />

  <!--//////////////////////////////////////////////////////////////////////////////////////-->
  <!--//////////////////////////////// robotis_op3 right arm ///////////////////////////////-->
  <!--//////////////////////////////////////////////////////////////////////////////////////-->  
  <!-- robotis_op3 right arm -->
  <xacro:macro name="robotis_op3_r_arm" params="parent">
  
  <!-- right shoulder pitch joint -->
  <joint name="robotis_op3_r_arm_sh_p" type="revolute">
    <axis xyz="0 -1 0" />    
    <origin xyz="0.0 -0.062 0.07" rpy="0 0 0"/>
    <parent link="${parent}"/>
    <child link="robotis_op3_r_arm_sh_p_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_r_arm_sh_p" />    

  <!-- right shoulder pitch link -->
  <link name="robotis_op3_r_arm_sh_p_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_r_arm_sh_p_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  <!-- right shoulder roll joint -->
  <joint name="robotis_op3_r_arm_sh_r" type="revolute">
    <axis xyz="1 0 0" />    
    <origin xyz="0.019 -0.019 -0.0465" rpy="0 0 0"/>
    <parent link="robotis_op3_r_arm_sh_p_link"/>
    <child link="robotis_op3_r_arm_sh_r_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_r_arm_sh_r" />    

  <!-- right shoulder roll link -->
  <link name="robotis_op3_r_arm_sh_r_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_r_arm_sh_r_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  <!-- right elbow roll joint -->
  <joint name="robotis_op3_r_arm_el_r" type="revolute">
    <axis xyz="1 0 0" />    
    <origin xyz="0.0 -0.09025 0" rpy="0 0 0"/>
    <parent link="robotis_op3_r_arm_sh_r_link"/>
    <child link="robotis_op3_r_arm_el_r_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_r_arm_el_r" />    

  <!-- right elbow roll link -->
  <link name="robotis_op3_r_arm_el_r_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_r_arm_el_r_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  </xacro:macro>

  <!--//////////////////////////////////////////////////////////////////////////////////////-->
  <!--//////////////////////////////// robotis_op3 left arm ////////////////////////////////-->
  <!--//////////////////////////////////////////////////////////////////////////////////////-->   
  <!-- robotis_op3 left arm -->
  <xacro:macro name="robotis_op3_l_arm" params="parent">
  
  <!-- left shoulder pitch joint -->
  <joint name="robotis_op3_l_arm_sh_p" type="revolute">
    <axis xyz="0 1 0" />    
    <origin xyz="0.0 0.062 0.07" rpy="0 0 0"/>
    <parent link="${parent}"/>
    <child link="robotis_op3_l_arm_sh_p_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_l_arm_sh_p" />    

  <!-- left shoulder pitch link -->
  <link name="robotis_op3_l_arm_sh_p_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_l_arm_sh_p_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  <!-- left shoulder roll joint -->
  <joint name="robotis_op3_l_arm_sh_r" type="revolute">
    <axis xyz="1 0 0" />    
    <origin xyz="0.019 0.019 -0.0465" rpy="0 0 0"/>
    <parent link="robotis_op3_l_arm_sh_p_link"/>
    <child link="robotis_op3_l_arm_sh_r_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_l_arm_sh_r" />    

  <!-- left shoulder roll link -->
  <link name="robotis_op3_l_arm_sh_r_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_l_arm_sh_r_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  <!-- left elbow roll joint -->
  <joint name="robotis_op3_l_arm_el_r" type="revolute">
    <axis xyz="1 0 0" />    
    <origin xyz="0.0 0.09025 0" rpy="0 0 0"/>
    <parent link="robotis_op3_l_arm_sh_r_link"/>
    <child link="robotis_op3_l_arm_el_r_link"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint> 
  <xacro:insert_transmission name="robotis_op3_l_arm_el_r" />    

  <!-- left elbow roll link -->
  <link name="robotis_op3_l_arm_el_r_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_op3_description/meshes/robotis_op3_l_arm_el_r_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>  
  
  </xacro:macro>
  
</robot>